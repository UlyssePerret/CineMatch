{% extends 'base.html.twig' %}

{% block title %}Hello ListMemberController!{% endblock %}

{% block body %}
<style>
    /*.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
    /*.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/
    body{

        background: lightslategrey;

    }
    table{
        background: #adb5bd;
        box-shadow: 10px 5px 5px black;
    }
    thead{
        background: rgba(18, 145, 178, 0.93);
    }
    h1{
        color: #1b1e21;
    }

    tr {
        border: #1b1e21 2px;
    }
    th {
        font-size: 24px;
    }
    td {
        font-size: 15px;
    }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur la liste des membres</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Nom d'utilisateur
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.pseudo}}
                </td>
                <td>
                    {{ user.email }}
                </td>
                <td>
                    <a href="{{ path( user.mon_espace) }}">Voir profil</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
