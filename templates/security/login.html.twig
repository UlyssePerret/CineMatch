{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <style>
        body {
            background-image: url("{{asset( 'image/tickets.jpg' )}}");
            background-size: cover;
            color: white;
        }
        .form-group{
            font-size:1.1rem;
        }
        /*sticky footer*/
        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
          color: white;
            text-align: center;
        }

    </style>

<div class="example-wrapper">
    <div class="container">

        <h1>Connexion</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">

            <div class="form-group">
                <label for="username">Pseudo:</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
            </div>
            
            <div class="form-group">
                <label for="password">Mot de passe:</label>
                <input type="password" class="form-control" id="password" name="_password" />
            </div>
            
            <div class="form-group">
                <button type="submit" class="form-control" >Connexion</button>
            </div>

            <input type="hidden" name="_target_path" value="/list/member" />

        </form>

    </div>
</div>

{% endblock %}
