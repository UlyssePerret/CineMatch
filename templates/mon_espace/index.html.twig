{% extends 'base.html.twig' %}

{% block title %}Hello MonEspaceController!{% endblock %}

{% block body %}
<style>

    body{

        background: darkgray;
        display: table;
        width: 100%;
    }
    h1{
        color: #1b1e21;
        margin: 0 auto;
    }
    .vertical_center{
        /*display: table-cell;*/
        vertical-align: middle;
    }
    .profile_widget{
        width: 400px;
        padding: 75px 55px 70px 55px;
        border-radius: 4px;
        overflow: hidden;
        text-align: center;


        background-color: #0f6674;
        box-shadow: 0 50px 70px 0 rgba(0,0,0,0.7);
        margin: 50px auto;
    }
    .pw_avatar{
        width: 150px;
        height: 150px;
        overflow: hidden;
        border-radius: 150px;
        border: 3px solid #313131;
        margin: 0 auto 35px auto;
    }
    .pw_avatar img{
        /*display: block;*/
        width: 100%;

    }
    .pw_info{
        margin: 0 0 100px 0;
    }
    .pw_info h1{
        margin: 0 0 8px 0;
        font-size: 24px;
        color: #1b1e21;
    }
    .pw_info h2{
        margin: 0 0 10px 0;
        font-size: 19px;
        color: #2c4b65;
    }

    .pw_info p{
        margin: 0;
        font-size: 14px;
    }
    .pw_info_admin{
        font-size: 14px;
    }

</style>

<div class="example-wrapper">






{% set user = app.user %}
        <div class="vertical_center" >
            <h1>    Mon Espace </h1>
            <div class="profile_widget" >

                <div class="pw_avatar" >
                    <img src="{{ user.photo }}" alt="" />
                </div>
                <div class="pw_info" >
                    <h1>Pseudo : {{ user.pseudo}}</h1>

                    <p>Description : {{ user.description }}</p>
                    <div class="pw_info_admin">
                    <ul>
                        <li> Nom :  {{ user.nom }}</li>
                        <li> Prenom :   {{ user.prenom }}</li>
                        <li> Statut  {{ user.statut }} </li>
                        <li>Date de Naissance :   {{ user.datenaissance | date('d/m/Y') }} </li>
                        <li> Email :  {{ user.email }} </li>



                    </ul>
                    </div>
                </div>
            </div>
        </div>

            </div>



{% endblock %}
