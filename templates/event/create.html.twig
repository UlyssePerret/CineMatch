{% extends 'base.html.twig' %}

{% block title %}Créer un évènement{% endblock %}

{% block body %}
    <style>
        body {
            background-image: url("{{ asset( 'image/tickets.jpg' ) }}");
            color: honeydew;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 1200px;
            width: 95%
        }

        .example-wrapper code {
            padding: 2px 6px;
        }

        .container {
            margin-top: 10rem;
        }

        h1 {
            padding: 2rem;
        }
        .cinema-image img {
            max-width:100px;
            height:100%;
        }

        .affiche img {
            max-width:100px;
            height:100%;
        }
    </style>

    <div class="container">
        <h2>Vous souhaitez créer un nouvel Évènement pour voir {{ filmtitre }}
            {#
                Code avant : si on utiliser la base de donnée
                    {% if seance.feed.theaterShowtimes.0.movieShowtimes.0.onShow.movie.title is defined  %}
                        {{ seance.feed.theaterShowtimes.0.movieShowtimes.0.onShow.movie.title }}
                    {% endif %}
            #}
        </h2>
        <h1>Fiche de l'évenement</h1>
        <div class="example-wrapper">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-text" style="color: black">{{  filmtitre  }}</h1>
                    <h2  style="color: black"> Le {{  datejour  }} à {{  horraire  }}
                    </h2>
                    <h2 style="color: black">Cinema : {{  nom_cinema  }} </h2>
                    <h2 style="color: black">Adresse: {{ adresse  }}</h2>



                    <div class="form-group" style="color: black">
                        {{ form_label(create.info_comp, 'Informations complémentaires') }}
                        {{ form_widget( create.info_comp, {'attr':{'class':'form-control'}} ) }}
                    </div>
                    <p  style="color: black" >
                        N° Seance : {{ codeseance }}
                        <a href="{{ lienallocine}}">Voir sur Allociné</a>
                    </p>
                </div>
            </div>
            <a href="{{ path( 'list_event' ) }}" class="btn btn-lg btn-warning">Rejoindre l'évenement</a>
            <a  href="{{ path( 'list_event' ) }}" class="btn btn-lg btn-primary">Créer un évenement</a>
        </div>

        {#
            <div class="container">
                {{ form_start( create ) }}

                <div class="form-group">
                    {{ form_row(create.cinema, {'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(create.adresse, {'attr':{'class':'form-control'}}) }}
                    </div>

            <div class="form-group">
                {{ form_label( create.heure, 'Heure' ) }}
                {{ form_widget( create.heure ) }}
            </div>

            <div class="form-group">
                {{ form_label(create.info_comp, 'Informations complémentaires') }}
                {{ form_widget( create.info_comp, {'attr':{'class':'form-control'}} ) }}
            </div>

            {{ form_end( create ) }}
        </div>
        #}

    </div>


{% endblock %}
