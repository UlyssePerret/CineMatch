{% block title %}Ciné'Match{% endblock %}

{% block body %}
    <style>
        body{
            background-image: url("image/light-resized2.jpg");
            background-repeat: no-repeat;
            background-size: cover
        }

        h2:first-of-type{
            text-align: center;
        }

        .carousel-inner{
            margin-bottom: 2rem;
        }

        .carousel-inner>img{
            max-width: 30%;
            height:auto; !important
        }

        .list-group{
            margin-top: 2rem;
        }
        .list-group-item{
            height: 6rem;
            max-height: 200px;
        }

        .list-group>a{
            font-size: 1.2rem;
            color: #313131;
        }
