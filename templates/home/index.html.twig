<div class="container" >

<div class="container">
    <div id="carouselExampleControls" class="carousel slide col-sm-8 offset-sm-2" data-ride="carousel">

        <h2>À L'AFFICHE CETTE SEMAINE</h2>

        <div class="carousel-inner justify-content-center"  style="height: 400px" >

            {% for film in films %}
                <div class="carousel-item container col-sm-6 offset-sm-3
{% if loop.first %} active {% endif %}" >
                    <a href="{{ path( 'film', {id:film.id} ) }}" class="d-flex justify-content-center">
                        <img src="{{ asset( film.image )}}" class="d-block " alt="{{ film.titre }}">
                    </a>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

